{
  "hosting": {
    "targets": [
      {
        "target": "default",
        "public": "dist",
        "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
        "rewrites": [
          {
            "source": "**",
            "destination": "/index.html"
          }
        ]
      },
      {
        "target": "storybook",
        "public": "storybook-static",
        "ignore": ["firebase.json", "**/.*", "**/node_modules/**"]
      }
    ]
  }
}
